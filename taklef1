<script>
    async function sendToTelegram() {
        const button = document.querySelector('button[type="button"]');
        button.disabled = true;
        button.textContent = "جاري الإرسال...";

        const studentName = document.getElementById('studentName').value;
        const answer1 = document.getElementById('answer1').value;
        const answer2 = document.getElementById('answer2').value;
        const file1 = document.getElementById('file1').files[0];
        const file2 = document.getElementById('file2').files[0];

        if (!studentName || (!file1 && !file2)) {
            document.getElementById('errorMessage').style.display = 'block';
            button.disabled = false;
            button.textContent = "إرسال التكاليف";
            return;
        }

        const message = `تكاليف الطالب: ${studentName}\n\nالتكليف الأول: ${answer1}\n\nالتكليف الثاني: ${answer2}`;

        const token = '7730074042:AAE7SoB8JraxwYc22_LrCCrSuglqJgMDN7Y';
        const chatId = '152435304';

        try {
            await fetch(`https://api.telegram.org/bot${token}/sendMessage`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ chat_id: chatId, text: message }),
            });

            if (file1) await sendPhotoToTelegram(token, chatId, file1);
            if (file2) await sendPhotoToTelegram(token, chatId, file2);

            showSuccessMessage();
        } catch (error) {
            console.error('حدث خطأ أثناء الإرسال:', error);
        } finally {
            button.disabled = false;
            button.textContent = "إرسال التكاليف";
        }
    }

    async function sendPhotoToTelegram(token, chatId, file) {
        const formData = new FormData();
        formData.append('chat_id', chatId);
        formData.append('photo', file);

        await fetch(`https://api.telegram.org/bot${token}/sendPhoto`, {
            method: 'POST',
            body: formData,
        });
    }

    function showSuccessMessage() {
        const successMessage = document.getElementById('successMessage');
        successMessage.style.display = 'block';
        setTimeout(() => {
            successMessage.style.display = 'none';
        }, 3000);
    }
</script>

